<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="android:textViewStyle">@style/MyTextViewStyle</item>
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="MyTextViewStyle" parent="android:Widget.TextView">
        <item name="android:textColor">@color/textColorWhite</item>
    </style>

    <style name="questionLayout1">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:orientation">vertical</item>
        <item name="android:background">@color/Q1Layout</item>
    </style>

    <style name="questionLayout2">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:orientation">vertical</item>
        <item name="android:background">@color/Q2Layout</item>
    </style>

    <style name="questionLayout3">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:orientation">vertical</item>
        <item name="android:background">@color/Q3Layout</item>
    </style>

    <style name="questionLayout4">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:orientation">vertical</item>
        <item name="android:background">@color/Q4Layout</item>
    </style>




    <style name="Questions">
         <item name="android:textAppearance">@style/TextAppearance.AppCompat.Large</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:padding">16dp</item>
    </style>

    <style name="images">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">120dp</item>
        <item name="android:scaleType">centerCrop</item>
    </style>

    <style name="RadioButtons">
        <item name="android:textColor">@color/textColorWhite</item>
        <item name="android:textAppearance">@style/TextAppearance.AppCompat.Medium</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:buttonTint">@color/textColorWhite</item>
    </style>

    <style name="CheckBox">
        <item name="android:textColor">@color/textColorWhite</item>
        <item name="android:textAppearance">@style/TextAppearance.AppCompat.Medium</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:padding">16dp</item>
    </style>

    <style name="EditView">
        <item name="android:textColor">@color/textColorWhite</item>
        <item name="android:textAppearance">@style/TextAppearance.AppCompat.Medium</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:padding">16dp</item>
        <item name="android:gravity">center</item>
        <item name="android:inputType">phone</item>
        <item name="android:textSize">24sp</item>
    </style>

    <style name="submitButton">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">100dp</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:gravity">center</item>
        <item name="android:onClick">submitQuiz</item>
        <item name="android:background">@color/Red700</item>
        <item name="android:textColor">@color/textColorWhite</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="resetButton">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">80dp</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:gravity">center</item>
        <item name="android:onClick">resetQuiz</item>
        <item name="android:background">@color/BlueGray700</item>
        <item name="android:textColor">@color/textColorWhite</item>
        <item name="android:textSize">18sp</item>
    </style>





</resources>
